<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="first quarter"
                android:textColor="#02111B"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/khat"
                android:layout_width="360dp"
                android:layout_height="1.8dp"
                android:background="#3F4045"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="@+id/khat"
                app:layout_constraintStart_toStartOf="@+id/khat"
                app:layout_constraintTop_toBottomOf="@+id/khat">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="98dp"
                    android:background="#D8BFD8"
                    android:gravity="center"
                    android:text="JAN"
                    android:textColor="#EEE8AA"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/j" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintStart_toStartOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/card">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#D8BFD8"
                    android:gravity="center"
                    android:text="FEB"
                    android:textColor="#EEE8AA"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/f" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/card2"
                app:layout_constraintStart_toStartOf="@+id/card2"
                app:layout_constraintTop_toBottomOf="@+id/card2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#D8BFD8"
                    android:gravity="center"
                    android:text="MAR"
                    android:textColor="#EEE8AA"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/m" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="second quarter"
                android:textColor="#02111B"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/card3"
                app:layout_constraintTop_toBottomOf="@id/card3" />

            <ImageView
                android:id="@+id/khat2"
                android:layout_width="360dp"
                android:layout_height="1.8dp"
                android:background="#3F4045"
                app:layout_constraintEnd_toEndOf="@id/khat"
                app:layout_constraintStart_toStartOf="@id/text2"
                app:layout_constraintTop_toBottomOf="@+id/text2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/khat2"
                app:layout_constraintStart_toStartOf="@+id/khat2"
                app:layout_constraintTop_toBottomOf="@+id/khat2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#D8BFD8"
                    android:gravity="center"
                    android:text="APR"
                    android:textColor="#EEE8AA"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="TODO"

                    android:scaleType="fitXY"
                    android:src="@drawable/a" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/card4"
                app:layout_constraintStart_toStartOf="@+id/card4"
                app:layout_constraintTop_toBottomOf="@+id/card4">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#D8BFD8"
                    android:gravity="center"
                    android:text="MAY"
                    android:textColor="#EEE8AA"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/may" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@id/card5"
                app:layout_constraintStart_toStartOf="@id/card5"
                app:layout_constraintTop_toBottomOf="@id/card5">

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/card5"
                    app:layout_constraintTop_toBottomOf="@id/card5" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#D7D1C9"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@id/card6"
                app:layout_constraintStart_toStartOf="@id/card6"
                app:layout_constraintTop_toBottomOf="@id/card6">

                <WebView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#FFF5EE"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent">

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tools"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <com.example.nazanin.Vazir
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="طراحی خوب بیش از آنکه هزینه به بار آورد ارزش آفرینی می کند"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

